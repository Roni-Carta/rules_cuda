    sha256 = "b3020139e3234ec772955ced02987ca5961ba1941af9ec0d3d68743740f733c7",
    strip_prefix = "nccl-2ea4ee94bfb04c886c79ccae60ac9961000fdee2",
    urls = ["https://github.com/nvidia/nccl/archive/2ea4ee94bfb04c886c79ccae60ac9961000fdee2.tar.gz"],
)

